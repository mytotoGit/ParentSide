<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutLiveLock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nova_round"
                android:maxLines="1"
                android:text="Start"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nova_round"
                android:maxLines="1"
                android:text="Mon Apr 19 2021 19:58:36"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/nova_round"
                android:maxLines="1"
                android:text="End"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nova_round"
                android:maxLines="1"
                android:text="Mon Apr 19 2021 19:58:36"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>

        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
            android:id="@+id/progressDuration"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            app:direction="clockwise"
            app:dotColor="?colorPrimary"
            app:dotWidth="8dp"
            app:drawDot="true"
            app:enableProgressAnimation="true"
            app:fillBackground="false"
            app:gradientEndColor="@color/blue_200"
            app:gradientType="linear"
            app:progressBackgroundColor="#63CCCDD3"
            app:progressBackgroundStrokeWidth="4dp"
            app:progressCap="round"
            app:progressColor="@color/blue_200"
            app:progressStrokeWidth="4dp"
            app:startAngle="270"
            app:textColor="@color/text"
            app:textSize="10sp" />

    </RelativeLayout>

</LinearLayout>