<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FullScreenMapActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/btnFullScreenMapExit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/map"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/button_map_full_screen_exit"
        tools:ignore="contentDescription" />

    <ImageView
        android:id="@+id/btnShowChildLocationDialog"
        android:layout_below="@+id/btnFullScreenMapExit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/button_show_child_location"
        tools:ignore="contentDescription" />

</RelativeLayout>