<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_main_login_scene"
    tools:context=".MainLogin">
    <LinearLayout

        android:id="@+id/counterPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"

    android:layout_height="wrap_content" android:orientation="horizontal">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counter"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#C323ED"
        />
    <EditText
        android:id="@+id/editTextCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:ems="10"

        android:inputType="textPersonName"
      android:hint="count"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#033459"

        />

</LinearLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="+"
        android:onClick="onClick"
        android:textSize="190sp"
         />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listPage" android:orientation="vertical">
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/listview"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
</LinearLayout>